extends base

append window_title
  &mdash;
  = page.title

append content
  .PostDetail
    .PostMeta
      h2.title= page.title
      .Meta
        include _partial/meta
        +date(page.date)
        +category(page.categories)
    .PostContent 
      != page.content
    include _partial/share
    +share(page)
