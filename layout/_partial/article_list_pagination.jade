nav#article-list-pagination.Pagination
  if page.prev
    a.prev(href=config.root + page.prev_link, title=__("prev") + ' articles')
      | &larr; 
      = __("prev") + ' articles'
  if page.prev && page.next
    | &emsp;
  if page.next
    a.next(href=config.root + page.next_link, title=__("next") + ' articles')
      = __("next") + ' articles'
      |  &rarr;
